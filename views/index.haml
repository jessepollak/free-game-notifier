!!! 5
%html
  %head
    %script{src: "http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js", type: "text/javascript"}
    %script{src: "http://malsup.github.com/jquery.form.js", type: "text/javascript"}
    %link{rel: "stylesheet", href: "css/bootstrap.min.css", type: "text/css"}
    :css
      body {
        background: url("images/MLBlogo.jpg") no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
      }
      .span8.offset2{
        background: rgba(0,0,0,.75);
        margin-top: 200px;
        height: 300px;
        border-radius: 5px;
      }
      .form-container {
        margin-top: 40px;
        height: 30px;
        margin-left: 40px;
      }
      .thanks {
        text-align: center;
        line-height: 30px;
        color: white;
      }
      .info {
        width: 80%;
        margin: 20px 0 0 40px;
      }
      h2,p {
        text-align: center
      }
      .footer {
        margin-top: 40px;
      }
      .footer p {
        color: #DDD;
      }
    :javascript
      $(document).ready(function() { 
          // bind 'myForm' and provide a simple callback function 
          $('form').ajaxForm(function() { 
              $('.form-container').fadeOut(1000, function() {
                $(this).html("<p class='thanks'>We'll shoot you an email as soon as your team is on MLB.tv for free!</p>").fadeIn(1000);
              });
          }); 
      });
  %body
    .container
      .row
        .shit
        .span8.offset2
          .info.well
            %h2 MLB.tv Free Game of the Day Notification
            %p Get an email notification when your favorite team is on the MLB.tv Free Game of the Day!
          .form-container
            %form.form-inline{action: "/contact", method: "post"}
              %input{type: "text", placeholder: "Email", name: "email", class: "input-large"}
              %select{name: "team"}
                %option Angels
                %option Astros
                %option Athletics
                %option Blue Jays
                %option Braves
                %option Brewers
                %option Cardinals
                %option Cubs
                %option Diamondbacks
                %option Dodgers
                %option Giants
                %option Indians
                %option Mariners
                %option Marlins
                %option Mets
                %option Nationals
                %option Orioles
                %option Padres
                %option Phillies
                %option Pirates
                %option Rangers
                %option Rays
                %option Red Sox
                %option Reds
                %option Royals
                %option Rockies
                %option Tigers
                %option Twins
                %option White Sox
                %option Yankees
              %button{type: "submit", class: "btn"}Remind me!
          .footer
            %p created by <a href="http://twitter.com/jessepollak">@jessepollak</a>